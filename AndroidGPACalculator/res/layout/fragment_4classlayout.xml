<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/class1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="24dp"
        android:textSize="24sp"
        android:text="@string/class1_title"/>
    <Spinner 
        android:id="@+id/class1_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/class1_title"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"/>
    <TextView 
        android:id="@+id/class2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/class1_title"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="24dp"
        android:textSize="24sp"
        android:text="@string/class2_title"/>
    <Spinner
        android:id="@+id/class2_spinner"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/class2_title"
        android:layout_below="@+id/class1_spinner"
        android:layout_marginBottom="20dp"/>
    

</RelativeLayout>
